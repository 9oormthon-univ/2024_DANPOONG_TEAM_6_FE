<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FEFCE9"
    tools:context=".FestivalInfo">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Primary">

        <!-- 앱바 Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/Primary" >
            <Button
                android:id="@+id/closeButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/white_circle_background"
                android:contentDescription="Close"
                android:gravity="center"
                android:text="x"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="#D2E18D" />
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="순창 떡볶이 페스타"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEFCE9"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/festival_photo"
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:background="@drawable/ic_launcher_background"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext_border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ellipse_2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/contentNameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="2024 순창떡볶이 페스타"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/date_range_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/contentDateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="2024.11.16 ~ 2024.11.17"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/place_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/contenPositionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="순창 전통고추장 민속마을"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/exlainText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:fontFamily="@font/maplestory_light"
            android:text="분식대장 떡볶이의 대활약이 펼쳐지는 '2024 순창 떡볶이 페스타' 개최된다. 이날 행사를 통해 한국인의 소울푸드 떡볶이의 무한한 변신을 만날 수 있는 특별한 경험을 선사할 예정이며, 남녀노소 누구나 볼거리, 즐길거리, 먹거리가 풍성한 축제를 즐길 수 있다."
            android:textSize="16sp" />


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>